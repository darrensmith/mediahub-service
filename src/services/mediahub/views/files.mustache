<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<title>Files | Media Hub</title>
		<meta name="description" content="Media Hub">
		<meta name="viewport" content="width=device-width,initial-scale=1">
		{{> styles}}
		{{> javascript}}
	</head>

	<style>
		.bground {
			padding: 0px;
			background-image: url("/img/files-background.jpg") !important;
			width: 100%;
			height:140%;
			position:fixed;
		}
		.trans {
			padding: 0px;
			background-color: black;
			width: 100%;
			height:140%;
			position:fixed;
			opacity:0.7;
		}
		.main {
			background:transparent;
		}
		.titlearea {
			opacity:0.8;
		}
		.leftbar {
			opacity:0.8;
		}
	</style>

	<body class="home">
		<div class="bground"></div>
		<div class="trans"></div>
		{{> header}}
		<div class="titlearea"> 
		    {{> title}}
		    <div class="righttag font"> <span style="font-size: 16px;">Files</span> </div>
		</div>
		<div class="main">
			{{> leftbar}}
			<div class="container" id="container">
			</div>
		</div>
	</body>

	<script>
		var container = document.getElementById('container');
		{{#folders}}
			container.innerHTML += "<a href=\"/web/files?folder={{key}}\"> <div class=\"bigbox\"><div class=\"logo\"><img style=\"width: 100px;\" src=\"/img/folder.png\"/><p class=\"font2\"> {{folderName}} </p></div></div> </a>";
		{{/folders}}
		{{#files}}
			container.innerHTML += "<a href=\"/web/files/{{key}}\"> <div class=\"bigbox\"><div class=\"logo\"><img style=\"width: 100px;\" src=\"/img/file.jpg\"/><p class=\"font2\"> {{filename}} </p></div></div> </a>";
		{{/files}}
	</script>

</html>